@model SitecoreMvcAjaxForms.Models.AjaxContainer
<div id="ajaxContainer">
    @if (Model.PageEditorMode == false)
    {
        @Html.Sitecore().Placeholder("AjaxContainer")
    }
    else
    {
        <div class="page-editor">
            <div class="page-editor-tabs">
                @for (int i = 0; i < Model.FormItems.Count; i++)
                {
                    <a data-index="@i" class="@(i == 0 ? "selected" : "")">@Model.FormItems[i].Name</a>
                }
            </div>
            @for (int i = 0; i < Model.FormItems.Count; i++)
            {
                <div class="page-editor-tab-content @(i == 0 ? " selected" : "")" data-index="@i">
                    @Html.Sitecore().ItemRendering(Model.FormItems[i])
                </div>
            }
        </div>
    }
</div>
