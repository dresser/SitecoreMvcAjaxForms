@using SitecoreMvcAjaxForms.Extensions
@model SitecoreMvcAjaxForms.Models.LoginViewModel
<div id="login">
    <h2>@Html.Sitecore().Field("Title", Model.Item)</h2>
    <p>@Html.Sitecore().Field("Content", Model.Item)</p>
    @using (Html.BeginForm("Login", "AjaxForms"))
    {
        @Html.FormData(Model)
        <p>
            @Html.TextBoxFor(m=>m.UserName)
        </p>
        <p>
            @Html.PasswordFor(m=>m.Password)
        </p>
        <input type="submit" value="Login"/>
    }
</div>
